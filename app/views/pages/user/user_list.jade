extends ../../includes/layout.jade
block link
  link(href="/libs/css/include/list.min.css",rel="stylesheet")
block content
  .container.bgfff
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 名字
            th 时间
            th 查看
            th 修改
            th 删除
        tbody
          each item in users
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td #{moment(item.meta.updateAt).format('YYYY/DD/MM')}
              td: a(target="_blank", href="/movie/#{item._id}" class="look") 查看
              td: a(target="_blank", href="/admin/update/#{item._id}") 修改
              td
                button.btn.btn-danger.userDel(type="button", data-id="#{item._id}") 删除
  script(src="/libs/scripts/js/user/user_list.min.js")
