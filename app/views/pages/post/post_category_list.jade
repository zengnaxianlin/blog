extends ../../includes/layout
block link
  link(href="/libs/css/include/list.min.css",rel="stylesheet")
block content
  .container.bgfff
    .row
      table.table.table-hover.table-bordered
        thead
          tr
            th 文章分类
            th 文章标题
            th 时间
            th 查看
            th 修改
            th 删除
        tbody
          each item in postCategories
            tr(class="item-id-#{item._id}")
              td #{item.name}
              td
                each unit in item.posts
                  |#{unit.title}、
              td #{moment(item.meta.updateAt).format('MM/DD/YYYY')}
              td: a(target="_blank", href="/post/results?cat=#{item._id}&p=0" class="look") 查看
              td: a(target="_blank", href="/admin/post/postCategory/update/#{item._id}") 修改
              td
                button.btn.btn-danger.postCayDel(type="button", data-id="#{item._id}") 删除
  script(src="/libs/scripts/js/post/post_admin.min.js")
